{
    "name": "books.toscrape",
    "request": {
        "url": "http://books.toscrape.com/"
    },
    "fields": [
        {
            "name": "title",
            "selector": "h3 a",
            "attrs": [
                    "href",
                    "text"
                ]
        },
        {
            "name": "image",
            "selector": ".thumbnail",
            "attrs": [
                    "src",
                    "alt"
                ]
        },
        {
            "name": "price",
            "selector": ".price_color",
            "attrs": ["text"]
        }
    ],
    "format": "json"
}